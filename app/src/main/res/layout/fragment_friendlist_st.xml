<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FriendListSt">

    <android.support.v7.widget.Toolbar
        android:id="@+id/frnd_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Friend List" />

    <android.support.v7.widget.SearchView
        android:id="@+id/search_frnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/frnd_toolbar"
        android:background="#eae8e8" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/frnd_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_frnd" />

    <TextView
        android:id="@+id/list_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_frnd"
        android:background="@drawable/button_parallel_right"
        android:padding="10dp"
        android:text="Find More Friends"
        android:textSize="20dp"
        android:visibility="invisible" />

</RelativeLayout>