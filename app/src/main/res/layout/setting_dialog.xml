<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".info_Setting">

    <RelativeLayout
        android:id="@+id/setting_box"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/setting_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Change Full Name"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/one_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/setting_text"
            android:visibility="invisible"
            android:weightSum="1">

            <EditText
                android:id="@+id/setting_edit"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/border_4_search"
                android:hint="Email address"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/big_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/setting_text"
            android:visibility="invisible"
            android:weightSum="1">

            <EditText
                android:id="@+id/big_edit"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/border_4_search"
                android:paddingLeft="10dp"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/two_boxes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/setting_text"
            android:visibility="invisible"
            android:weightSum="2">

            <EditText
                android:id="@+id/setting_edit1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/border_4_search"
                android:hint="First name"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/setting_edit2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/border_4_search"
                android:hint="Second name"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/spinner_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/setting_text"
            android:visibility="invisible"
            android:weightSum="1">

            <Spinner
                android:id="@+id/pri_spinner"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@android:drawable/btn_dropdown"
                android:paddingLeft="10dp"
                android:scrollIndicators="right"
                android:spinnerMode="dropdown"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/text_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/setting_text"
            android:visibility="invisible"
            android:weightSum="1">

            <TextView
                android:id="@+id/text1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="Are you sure you want to delete your aacount?"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/setting_btn1"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/buttons_left"
            android:text="Change"
            android:textAllCaps="false"
            android:textColor="#fff" />

        <Button
            android:id="@+id/setting_btn2"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/buttons_right"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary" />
    </RelativeLayout>
</RelativeLayout>