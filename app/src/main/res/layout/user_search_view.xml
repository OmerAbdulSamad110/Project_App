<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/border_4_search"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:padding="10dp"
        android:weightSum="10">

        <ImageView
            android:id="@+id/user_img"
            android:layout_width="5dp"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="2"
            android:background="#000"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7.55">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:layout_marginBottom="10dp"
                android:text="checking text"
                android:textColor="#000" />

            <Button
                android:id="@+id/user_add"
                android:layout_width="145dp"
                android:layout_height="40dp"
                android:layout_below="@id/user_name"
                android:background="@drawable/buttons_left"
                android:text="Add Friend"
                android:textAllCaps="false"
                android:textColor="#ffff" />

            <Button
                android:id="@+id/user_cancel"
                android:layout_width="145dp"
                android:layout_height="40dp"
                android:layout_below="@id/user_name"
                android:background="@drawable/buttons_right"
                android:text="Cancel Request"
                android:textAllCaps="false"
                android:textColor="#0079e5"
                android:visibility="invisible" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>