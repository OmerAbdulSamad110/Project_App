<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/border_4_search"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:padding="10dp"
        android:weightSum="10">

        <ImageView
            android:id="@+id/user_img"
            android:layout_width="2dp"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:background="#000"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7.55"
            android:padding="10dp">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="checking text"
                android:textColor="#000" />

            <Button
                android:id="@+id/user_confirm"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_below="@id/user_name"
                android:background="@drawable/buttons_left"
                android:text="Confirm"
                android:textAllCaps="false"
                android:textColor="#ffff" />

            <Button
                android:id="@+id/user_delete"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_below="@id/user_name"
                android:layout_alignParentRight="true"
                android:background="@drawable/buttons_right"
                android:text="Delete"
                android:textAllCaps="false"
                android:textColor="#0079e5" />
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>